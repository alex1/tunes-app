<div class="new-form well">
  <%= nested_form_for @tune do |f| %>
    <% if @tune.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tune.errors.count, "error") %> prohibited this tune from being saved:</h2>

        <ul>
        <% @tune.errors.full_messages.each do |msg| %>
